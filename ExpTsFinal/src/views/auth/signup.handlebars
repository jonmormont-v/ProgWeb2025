<div class="col-6">

<form action="/auth/signup" id="signup" method="post">
<div class="mb-3">
  <label for="fullname" class="form-label">Nome Completo</label>
  <input type="text" class="form-control" id="fullname" name ="fullname" />
</div>
<div class="mb-3">
  <label for="email" class="form-label">Email</label>
  <input type="text" class="form-control" id="email" name ="email" />
</div>
<div class="mb-3">
  <label for="description" class="form-label">Curso</label>
<select class="form-select" name="majorId">
    {{#each majors }}
  <option value="{{id}}">{{name}}</option>
    {{/each}}
</select>
</div>
<div class="mb-3">
  <label for="password" class="form-label">password</label>
  <input type="password" class="form-control" id="password" name ="password" />
</div>
<div class="mb-3">
  <label for="password" class="form-label">Repita a Senha</label>
  <input type="repeat-password" class="form-control" id="repeat-password" name ="repeat-password" />
</div>
  <button type="sumbit" class="btn btn-primary">Enviar</button>
</form>
</div>

<script>
    const signup = document.getElementById("signup");
    signup.addEventListener("submit", (e) => {
        const password = document.getElementById("password").value;
        const repeadPassword = document.getElementById("repeat-password").value;
        if (!password || password != repeadPassword ) e.preventDefault(); })
</script>