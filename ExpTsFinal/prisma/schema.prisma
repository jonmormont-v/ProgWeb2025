generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) @db.Char(36)
  name      String   @db.VarChar(100)
  email     String   @unique @db.VarChar(100)
  password  String   @db.Char(60)
  majorId   String   @db.Char(36)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  major         Major         @relation(fields: [majorId], references: [id])
  gameSessions  GameSession[] @relation("UserGameSessions")

  @@map("usuarios")
}

model Major {
  id          String   @id @default(uuid()) @db.Char(36)
  name        String   @unique @db.VarChar(100)
  code        String   @unique @db.Char(4)
  description String?  @db.Text()
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  users        User[]
  gameSessions GameSession[] @relation("MajorGameSessions")

  @@map("majors")
}

model GameSession {
  id        String   @id @default(uuid()) @db.Char(36)
  userId    String   @db.Char(36)
  majorId   String   @db.Char(36)
  score     Int?
  startedAt DateTime @default(now()) @map("started_at")
  endedAt   DateTime? @map("ended_at")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  user  User  @relation("UserGameSessions", fields: [userId], references: [id])
  major Major @relation("MajorGameSessions", fields: [majorId], references: [id])

  @@map("gamesessions")
}